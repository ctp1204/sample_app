<% provide :title, t("edit_user") %>
<% provide :button_text, t(".save") %>
<h1><%= t "users.user.title_up" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("users.user.change"), t("users.user.url_avatar") , target: "_blank", class: "btn btn-large btn-primary" %>
    </div>
  </div>
</div>
